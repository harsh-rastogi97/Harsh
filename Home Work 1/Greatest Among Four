// Create a Java program to find greatest out of four using if, if-else

public class IfElseDemo2 {

	public static void main(String[] args) {
		
		int a = 100;
		int b = 400;
		int c = 200;
		int d = 300;
		
		if (a > b)

			if (a > c)
				
				if(a > d)
					
					System.out.println(a);
				
				else
					
					System.out.println(d);
			
			else
				
				if(c > d)
					
					System.out.println(c);
				
				else
					
					System.out.println(d);
				
		else 
			
			if (b > c)
				
				if(b > d)
					
					System.out.println(b);
				
				else
					
					System.out.println(d);
			
			else
				
				if(c > d)
					
					System.out.println(c);
				
				else
					
					System.out.println(d);
		
	}

}
